<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragment.AddTypeFilmFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical"
            >
                <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thêm nhn vien"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/btn_color"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                />
                <TextView
                        android:id="@+id/tv_name_film"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên phim"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                />
                <EditText
                        android:id="@+id/edt_name_film"
                        android:layout_width="match_parent" android:layout_height="40dp"
                        android:hint="Nhập tên phim"
                        android:textSize="15dp"
                        android:background="@drawable/bg_form"
                />
                <TextView
                        android:id="@+id/txt_error_name"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="* loi"
                        android:textStyle="bold"
                        android:textColor="@color/text_error"
                />
                <Button
                        android:id="@+id/btn_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Tải ảnh"
                        android:layout_marginTop="15dp"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="2dp"
                        android:backgroundTint="@null"
                        android:background="@color/txt_green"
                        android:textColor="@color/white"
                />
                <ImageView
                        android:id="@+id/img_upload"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xuất phim"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="15dp"
                />
                <EditText
                        android:id="@+id/edt_sub_film"
                        android:layout_width="match_parent" android:layout_height="40dp"
                        android:hint="Chọn xuất phim"
                        android:textSize="15dp"
                        android:maxLines="2"
                        android:background="@drawable/bg_form"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loại phim"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="15dp"
                />
                <EditText
                        android:id="@+id/edt_type_film"
                        android:layout_width="match_parent" android:layout_height="40dp"
                        android:hint="Nhập loại phim"
                        android:inputType="none"
                        android:textSize="15dp"
                        android:maxLines="2"
                        android:background="@drawable/bg_form"
                />
                <TextView
                        android:id="@+id/txt_error_type"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="* loi"
                        android:textStyle="bold"
                        android:textColor="@color/text_error"
                />
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                >
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_weight="1"
                    >
                        <TextView
                                android:id="@+id/tv_nation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Quốc gia"
                                android:layout_marginTop="15dp"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/main_color"
                        />
                        <EditText
                                android:id="@+id/edt_nation"
                                android:layout_width="match_parent" android:layout_height="40dp"
                                android:hint="Nhập quốc gia"
                                android:textSize="15dp"
                                android:background="@drawable/bg_form"
                                android:drawableRight="@drawable/ic_nation"
                        />
                        <TextView
                                android:id="@+id/txt_error_nation"
                                android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:text="* loi"
                                android:textStyle="bold"
                                android:textColor="@color/text_error"
                        />
                    </LinearLayout>
                    <View android:layout_width="10dp" android:layout_height="match_parent"
                          />
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                    >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Thời lượng"
                                android:layout_marginTop="15dp"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/main_color"
                        />
                        <EditText
                                android:id="@+id/edt_duration"
                                android:layout_width="match_parent" android:layout_height="40dp"
                                android:hint="Nhập thời lượng"
                                android:textSize="15dp"
                                android:background="@drawable/bg_form"
                                android:drawableRight="@drawable/ic_time"
                        />
                        <TextView
                                android:id="@+id/txt_error_duration"
                                android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:text="* loi"
                                android:textStyle="bold"
                                android:textColor="@color/text_error"
                        />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mô tả"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="15dp"
                />
                <EditText
                        android:inputType="textPersonName"
                        android:id="@+id/edt_description"
                        android:scrollbars="vertical"
                        android:maxLines="10"
                        android:layout_width="match_parent" android:layout_height="40dp"
                        android:hint="Nhập mô tả"
                        android:textSize="15dp"
                        android:background="@drawable/bg_form"
                />
                <TextView
                        android:id="@+id/txt_error_description"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="* loi"
                        android:textStyle="bold"
                        android:textColor="@color/text_error"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nội dung"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="15dp"
                />
                <EditText
                        android:inputType="textPersonName"
                        android:id="@+id/edt_content"
                        android:scrollbars="vertical"
                        android:maxLines="10"
                        android:layout_width="match_parent" android:layout_height="40dp"
                        android:hint="Nhập nội dung"
                        android:textSize="15dp"
                        android:background="@drawable/bg_form"
                />
                <TextView
                        android:id="@+id/txt_error_content"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="* loi"
                        android:textStyle="bold"
                        android:textColor="@color/text_error"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trailer"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="15dp"
                />
                <EditText
                        android:inputType="textPersonName"
                        android:id="@+id/edt_trailer"
                        android:layout_width="match_parent" android:layout_height="40dp"
                        android:hint="Nhập link trailer"
                        android:textSize="15dp"
                        android:background="@drawable/bg_form"
                />
                <TextView
                        android:id="@+id/txt_error_trailer"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="* loi"
                        android:textStyle="bold"
                        android:textColor="@color/text_error"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dành cho :"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="15dp"
                />
                <Spinner
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_form"
                        android:id="@+id/spinner_age"
                        android:spinnerMode="dropdown"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="15dp"
                />
                <Spinner
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_form"
                        android:id="@+id/spinner_status_film"
                        android:spinnerMode="dropdown"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                >
                    <Button
                            android:id="@+id/btn_cancel"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_gravity="start"
                            android:layout_marginRight="10dp"
                            android:background="@color/main_color"
                            android:textColor="@color/white"
                            android:text="Hủy"

                    />
                    <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                    <Button
                            android:id="@+id/btn_save"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:layout_marginLeft="10dp"
                            android:background="@color/btn_color"
                            android:textColor="@color/white"
                            android:text="Tạo"
                    />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</FrameLayout>